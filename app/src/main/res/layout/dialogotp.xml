<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:text="Enter the otp which we sent you to to verify that it is your number if you have entered wrong number then click change button to correct it."
        android:id="@+id/textfff"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/otp"
        android:layout_below="@+id/textfff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Enter otp."
        android:textColorHint="#1C1C1C">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="#000000" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/otp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:weightSum="3">
        <Button
            android:id="@+id/change"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:text="Change"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/cancil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:text="cancel"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/submitotp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:text="Submit"
            android:textColor="#000000"/>

    </LinearLayout>


</RelativeLayout>