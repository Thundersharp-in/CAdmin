<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/org_manager"
    android:padding="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.AddOrganisationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            android:layout_marginTop="18dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/upload_org_logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:padding="12dp"
                    android:src="@drawable/ic_add_black_24dp"
                    app:civ_border_width="3dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Organisation Name"
                        android:padding="2dp"
                        android:textSize="17sp"
                        />

                    <EditText
                        android:id="@+id/upload_org_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:textSize="17sp"
                        android:padding="12dp"
                        android:textStyle="bold|italic"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/stroke1"
                        android:hint="Organisation Name"
                        android:textColorHint="#A5B5C1"
                        />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Organisation Description"
                android:padding="2dp"
                android:textSize="17sp"
                />

            <EditText
                android:id="@+id/upload_org_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:textColorHint="#A5B5C1"
                android:layout_gravity="start"
                android:gravity="start"
                android:textStyle="italic"
                android:textSize="17sp"
                android:padding="9dp"
                android:background="@drawable/stroke1"
                android:layout_marginTop="7dp"
                android:hint="Description"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="Organisation Motto"
                    android:padding="2dp"
                    android:textSize="17sp"
                    />

                <EditText
                    android:id="@+id/upload_org_motto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:textColorHint="#A5B5C1"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:textStyle="italic"
                    android:textSize="17sp"
                    android:padding="9dp"
                    android:background="@drawable/stroke1"
                    android:layout_marginTop="7dp"
                    android:hint="Description"
                    />




            </LinearLayout>



        </LinearLayout>

        <Button
            android:id="@+id/btn_upload_org"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:text="Upload"
            android:padding="1dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:background="@color/colorTextonSecondary"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>

</RelativeLayout>


