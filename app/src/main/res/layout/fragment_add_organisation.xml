<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/org_manager"
    android:padding="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.AddOrganisationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            android:layout_marginTop="18dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/upload_org_logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    app:civ_border_color="#0E0E0E"
                    android:src="@drawable/ic_add_black_24dp"
                    app:civ_border_width="3dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/upload_org_name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/cyan_900"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:textColorHint="@color/cyan_900">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Organisation Name"
                            android:drawableStart="@drawable/ic_baseline_edit_24"
                            android:layout_marginStart="2dp"
                            android:textColor="#000"
                            android:textColorHint="#A5B5C1"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:textStyle="italic"
                            android:layout_marginTop="7dp"
                            android:padding="@dimen/padding_10"/>


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/upload_org_desc"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/cyan_900"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:textColorHint="@color/cyan_900">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Organisation Description"
                            android:drawableStart="@drawable/ic_baseline_edit_24"
                            android:layout_marginStart="2dp"
                            android:textColor="#000"
                            android:textColorHint="#A5B5C1"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:textStyle="italic"
                            android:layout_marginTop="7dp"
                            android:padding="@dimen/padding_10"/>


                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/uupload_org_motto"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/cyan_900"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:textColorHint="@color/cyan_900">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Organisation Motto"
                            android:drawableStart="@drawable/ic_baseline_edit_24"
                            android:layout_marginStart="2dp"
                            android:textColor="#000"
                            android:textColorHint="#A5B5C1"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:textStyle="italic"
                            android:layout_marginTop="7dp"
                            android:padding="@dimen/padding_10"
                            />

                    </com.google.android.material.textfield.TextInputLayout>


                    <!--
                     <TextView
                        android:layout_width="wrap_content"
