<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context="com.thundersharp.cadmin.ui.fragment.Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="7dp"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="-5dp"
                android:layout_marginEnd="-5dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="130dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    >
                    <LinearLayout
                        android:id="@+id/l"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_alignParentStart="true"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            app:civ_border_color="#2196F3"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            app:civ_border_width="2dp"
                            android:src="@mipmap/ic_launcher_round"
                            />
                        <TextView
                            android:id="@+id/designation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:text="designation"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:textColor="@android:color/darker_gray"
                            android:padding="1dp"
                            />
                        <RatingBar
                            android:id="@+id/user_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:progressTint="#FF5722"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:numStars="5"
                            android:rating="2.1"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:padding="2dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_toEndOf="@id/l">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold|italic"
                            android:text="User Name"
                            android:gravity="start"
                            android:textColor="@android:color/black"
                            android:padding="3dp"
                            />

                        <TextView
                            android:id="@+id/bio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hello, CAdmin user welcome to your user profile section here you can find your overall rating and your current project progress and other info."
                            android:textSize="13sp"
                            android:textColor="#000"
                            />


                        <ProgressBar
                            android:id="@+id/work_progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_marginEnd="20dp"
                            android:max="100"
                            android:layout_marginTop="10dp"
                            android:progress="50"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current project progress %"
                            android:textSize="12sp"
                            android:textColor="#000"
                            />

                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_gravity="start"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal details"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#807777"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/edit_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textColor="#000"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/textview_bg"
                    android:padding="15dp"
                    android:enabled="false"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="19sp"
                    android:textStyle="italic"
                    android:padding="1dp"
                    android:textColor="#08165C"
                    android:background="#fff"
                    android:backgroundTint="#Fff"
                    android:gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/edit_useremail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="something@s.com"
                    android:textColor="#000"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/textview_bg"
                    android:padding="15dp"
                    android:enabled="false"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="19sp"
                    android:textStyle="italic"
                    android:padding="1dp"
                    android:textColor="#08165C"
                    android:background="#Fff"
                    android:gravity="center"
                    android:backgroundTint="#Fff"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/edit_userphoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9876543210"
                    android:textColor="#000"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/textview_bg"
                    android:padding="15dp"
                    android:enabled="false"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Phone No"
                    android:textSize="19sp"
                    android:textStyle="italic"
                    android:padding="1dp"
                    android:textColor="#08165C"
                    android:gravity="center"
                    android:background="#Fff"
                    android:backgroundTint="#FfF"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/edit_userbio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_thundersharp"
                    android:textColor="#000"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/textview_bg"
                    android:maxEms="500"
                    android:padding="15dp"
                    android:textSize="15sp"
                    android:enabled="false"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="19sp"
                    android:textStyle="italic"
                    android:padding="1dp"
                    android:gravity="center"
                    android:textColor="#08165C"
                    android:background="#Fff"
                    android:backgroundTint="#FfF"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/edit_userOrganisations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Organisation1 \n Organisation2 \n Oganisation3 "
                    android:textColor="#000"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/textview_bg"
                    android:padding="15dp"
                    android:enabled="false"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="All Organisations"
                    android:textSize="19sp"
                    android:textStyle="italic"
                    android:padding="1dp"
                    android:gravity="center"
                    android:textColor="#08165C"
                    android:background="#Fff"
                    android:backgroundTint="#Fff"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/edit_userUid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="hvgjfgfjvWS123"
                    android:textColor="#000"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/textview_bg"
                    android:padding="15dp"
                    android:enabled="false"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="User id"
                    android:textSize="19sp"
                    android:textStyle="italic"
                    android:padding="1dp"
                    android:gravity="center"
                    android:textColor="#08165C"
                    android:background="#Fff"
                    android:backgroundTint="#Fff"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="17dp"
                    android:background="@color/white"
                    android:text="Logout from this device"
                    android:fontFamily="sans-serif"
                    />

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


</ScrollView>