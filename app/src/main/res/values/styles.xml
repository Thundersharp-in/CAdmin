<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Darktheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="outline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/blue_grey_900</item>
        <item name="android:textColor">#fff</item>
        <item name="iconTint">#fff</item>
        <item name="android:textColorPrimary">#f3f3f3</item>
        <item name="android:calendarTextColor">#fff</item>
        <item name="android:amPmTextColor">#fff</item>
        <item name="android:colorForeground">#fff</item>
    </style>


    <style name="Widget" />

    <style name="Widget.AppTheme" />

    <style name="Widget.AppTheme.EventEditView">
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
    </style>

    <style name="Widget.AppTheme.EventEditView.TextView">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.AppTheme.EventEditView.TextView.Selectable">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.AppTheme.EventEditView.TextView.Selectable.End">
        <item name="android:gravity">center_vertical|end</item>
    </style>

    <style name="TextAppearance.AppTheme.Hint" parent="TextAppearance.Design.Hint" />

    <style name="TextAppearance.AppTheme.Hint.Disabled">
        <item name="android:textColor">?android:attr/textColorHint</item>
    </style>

    <style name="Widget.AppTheme.TextView" />

    <style name="Widget.AppTheme.TextView.Weather">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/padding_text</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:paddingTop">@dimen/padding_text</item>
        <item name="android:paddingBottom">@dimen/padding_text</item>
    </style>


</resources>